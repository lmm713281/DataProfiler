<?xml version="1.0" encoding="utf-8"?>
<configuration>
  
  <configSections>
    <section name="transformalize" type="Transformalize.Configuration.TransformalizeConfiguration, Transformalize"/>
  </configSections>

  <transformalize>
    <processes>
      <add name="DataProfiler">

        <file-inspection sample="100" min-length="64" max-length="1024">
          <types ignore-empty="true">
            <add type="boolean"/>
            <add type="byte"/>
            <add type="int16"/>
            <add type="int32"/>
            <add type="int64"/>
            <add type="single"/>
            <add type="double"/>
            <add type="decimal"/>
            <add type="datetime"/>
          </types>
          <delimiters>
            <add name="comma" character=","/>
            <add name="pipe" character="|"/>
            <add name="tab" character="&#009;"/>
            <add name="semicolon" character=";"/>
          </delimiters>
        </file-inspection>
        
        <connections>
          <add name="input" />
          <add name="output" provider="html" file="c:\temp\profile.html" />
        </connections>

        <actions>
          <add action="open" connection="output" />
        </actions>

        <entities>
          <add name="*" sample="100" no-lock="true" />
        </entities>
        
      </add>
    </processes>
  </transformalize>

  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5"/>
  </startup>

</configuration>
